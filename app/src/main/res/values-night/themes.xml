<resources>
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night_theme_700</item>
        <item name="colorPrimaryVariant">@color/night_theme_200</item>
        <item name="colorOnPrimary">@color/black_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/night_theme_700</item>
        <item name="colorSecondaryVariant">@color/night_theme_200</item>
        <item name="colorOnSecondary">@color/black_100</item>
        <!-- Customize your theme here. -->

        <item name="android:statusBarColor">@color/card_night</item>
        <item name="android:windowBackground">@color/black_100</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="appBarLayoutStyle">@style/appBar</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="Widget.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="android:background">@drawable/bg_toolbar_night</item>
    </style>

    <style name="appBar" parent="Theme.ToDoList">
        <item name="android:background">@color/card_night</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="headingView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/night_theme_700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/off_white</item>
    </style>

    <style name="appBarButton" parent="Theme.ToDoList">
        <item name="tint">@color/night_theme_700</item>
        <item name="android:background">@drawable/ripple_bg_night</item>
    </style>

    <style name="searchBox" parent="Theme.ToDoList">
        <item name="android:backgroundTint">@color/card_night</item>
    </style>
</resources>